<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".AddItemActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

                <EditText
                    android:id="@+id/inputIdItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/edit_text_backgorund"
                    android:hint="Id Item"
                    android:fontFamily="@font/poppinsregular"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:padding="15dp" />

                <Spinner
                    android:id="@+id/dropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="16dp"
                    android:entries="@array/dropdownCategory"
                    android:background="@drawable/spinner_bg"
                    android:popupBackground="#EFEAE3"
                    android:spinnerMode="dropdown"
                    android:paddingStart="5dp"
                    android:fontFamily="@font/poppinsregular"
                    android:includeFontPadding="false"
                    android:prompt="@string/prompt"
                    android:paddingVertical="16dp"/>

                <Spinner
                    android:id="@+id/dropdownFilter"
                    android:prompt="@string/prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:layout_marginHorizontal="14dp"
                    android:spinnerMode="dropdown"
                    android:fontFamily="@font/poppinsregular"
                    android:includeFontPadding="false"
                    android:popupBackground="#EFEAE3"
                    android:paddingStart="5dp"
                    android:paddingVertical="16dp" />

                <EditText
                    android:id="@+id/inputItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/edit_text_backgorund"
                    android:hint="Name Item"
                    android:fontFamily="@font/poppinsregular"
                    android:includeFontPadding="false"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/inputItemDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/edit_text_backgorund"
                    android:hint="Description Item"
                    android:fontFamily="@font/poppinsregular"
                    android:includeFontPadding="false"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/inputItemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/edit_text_backgorund"
                    android:inputType="number"
                    android:hint="Price Item"
                    android:fontFamily="@font/poppinsregular"
                    android:includeFontPadding="false"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/inputItemQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/edit_text_backgorund"
                    android:hint="Quantity item"
                    android:inputType="number"
                    android:fontFamily="@font/poppinsregular"
                    android:includeFontPadding="false"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/inputItemPicture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="14dp"
                    android:fontFamily="@font/poppinsregular"
                    android:includeFontPadding="false"
                    android:background="@drawable/edit_text_backgorund"
                    android:hint="Picture Link Item"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/buttonAddItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="14dp"
                    android:fontFamily="@font/poppinsbold"
                    android:includeFontPadding="false"
                    android:background="@drawable/btn_background"
                    android:text="Add Item"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
        </LinearLayout>


</ScrollView>